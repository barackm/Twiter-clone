<div class="login-main-container">
    <div class="login-left-area">
        <ul>
            <li>
                <i class="bi bi-search"></i>
                <span>Follow your interests</span>
            </li>
            <li>
                <i class="bi bi-people"></i>
                <span>Hear what people are talking about</span>
            </li>
            <li>
                <i class="bi bi-chat"></i>
                <span>Join the conversation</span>
            </li>
        </ul>


    </div>
    <div class="login-right-area" data-controller="auth">
        <div class="error"><% @user.errors.each do |error| %>
            <div><% p error %></div>
            <% end %>
        </div>
        <div class="content active" data-auth-target="loginInputs">
            <div class="logo-container">
                <i class="bi bi-twitter"></i>
            </div>
            <h3>
                See what's happening in the world right now
            </h3>
            <h4>
                Login to your account
            </h4>

            <div class="login-form-container">
                <%= form_with do |form| %>
                <div class="form-control">
                    <%= form.text_field :username, placeholder:"Username", class:"login-field" %>
                </div>
                <div class="form-control">
                    <%= password_field_tag :password,nil, placeholder:"Password", class:"login-field" %>
                </div>
                <div class="form-control remember_me">
                    <%= check_box_tag(:remember_me) %>
                    <%= label_tag(:remember_me, "Remember me") %>
                </div>
                <div class="form-control submit">
                    <div class="btn-wrapper">
                        <%= form.submit "Login", class:"login-submit-btn" %>
                    </div>
                    <div class="signup-link-details">
                        <span>Don't have an account ?</span>
                        <a href="#" data-auth-target="signupBtn" id="signup" data-action="click -> auth#showSignup" class="signup-link">Sign up</a>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
        <div class="content" data-auth-target="signupInputs">
            <div class="logo-container">
                <i class="bi bi-twitter"></i>
            </div>
            <h3>
                See what's happening in the world right now
            </h3>
            <h4>
                Join Twitter today
            </h4>

            <div class="login-form-container">
                <%= form_with model: @user, url: "/auth", method: :post do |form| %>
                <% p @user %>
                <div class="form-control">
                    <%= form.text_field :name, placeholder:"Name and Last name", class:"login-field" %>
                    <%if @user.errors[:name][0]%>
                    <div class="input-error-message"> Name <%= @user.errors[:name][0] %></div>
                    <%end %>
                </div>
                <div class="form-control">
                    <%= form.text_field :email, placeholder:"Email", class:"login-field" %>
                    <%if @user.errors[:email][0]%>
                    <div class="input-error-message">Email <%= @user.errors[:email][0] %></div>
                    <%end %>
                </div>
                <div class="form-control">
                    <%= form.text_field :username, placeholder:"User name", class:"login-field" %>
                    <%if @user.errors[:username][0]%>
                    <div class="input-error-message">User name <%= @user.errors[:username][0] %></div>
                    <%end %>

                </div>
                <div class="form-control">
                    <%= password_field_tag :password, nil , placeholder:"Password", class:"login-field" %>
                    <%if @user.errors[:password][0]%>
                    <div class="input-error-message">Password <%= @user.errors[:password][0] %></div>
                    <%end %>

                </div>
                <div class="form-control">
                    <%= password_field_tag :password_confirmation, nil , placeholder:"Confirm Password", class:"login-field" %>
                    <%if @user.errors[:password_confirmation][0]%>
                    <div class="input-error-message">Password <%= @user.errors[:password_confirmation][0] %></div>
                    <%end %>
                </div>
                <div class="form-control remember_me">
                    <%= check_box_tag(:remember_me) %>
                    <%= label_tag(:remember_me, "Remember me") %>
                </div>
                <div>
                    <div class="form-control submit">
                        <div class="btn-wrapper">
                            <%= form.submit "Signup", class:"login-submit-btn" %>
                        </div>
                        <div class="signup-link-details">
                            <span>Have an account ?</span>
                            <a href="#" class="signup-link" data-auth-target="loginBtn" data-action="click -> auth#showLogin">Login</a>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>