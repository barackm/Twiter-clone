<div class="login-main-container">
    <div class="login-left-area">
        <ul>
            <li>
                <i class="bi bi-search"></i>
                <span>Follow your interests</span>
            </li>
            <li>
                <i class="bi bi-people"></i>
                <span>Hear what people are talking about</span>
            </li>
            <li>
                <i class="bi bi-chat"></i>
                <span>Join the conversation</span>
            </li>
        </ul>


    </div>
    <div class="login-right-area" data-controller="auth">
        <div class="content active" data-auth-target="signupInputs">
            <div class="logo-container">
                <i class="bi bi-twitter"></i>
            </div>
            <h3>
                See what's happening in the world right now
            </h3>
            <h4>
                Join Twitter today
            </h4>

            <div class="login-form-container">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <% p @user %>
                <div class="form-control">
                    <%= f.text_field :name, autofocus: true, placeholder:"Name and Last name", class:"login-field" %>
                    <%if @user.errors[:name][0]%>
                    <div class="input-error-message"> Name <%= @user.errors[:name][0] %></div>
                    <%end %>
                </div>
                <div class="form-control">
                    <%= f.email_field :email, autocomplete: "email", placeholder:"Email", class:"login-field" %>
                    <%if @user.errors[:email][0]%>
                    <div class="input-error-message">Email <%= @user.errors[:email][0] %></div>
                    <%end %>
                </div>
                <div class="form-control">
                    <%= f.text_field :username, placeholder:"User name", class:"login-field" %>
                    <%if @user.errors[:username][0]%>
                    <div class="input-error-message">User name <%= @user.errors[:username][0] %></div>
                    <%end %>

                </div>
                <div class="form-control">
                    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", class:"login-field" %>
                    <%if @user.errors[:password][0]%>
                    <div class="input-error-message">Password <%= @user.errors[:password][0] %></div>
                    <%end %>

                </div>
                <div class="form-control">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder:"Confirm Password", class:"login-field" %>
                    <%if @user.errors[:password_confirmation][0]%>
                    <div class="input-error-message">Password <%= @user.errors[:password_confirmation][0] %></div>
                    <%end %>
                </div>

                <div>
                    <div class="form-control submit">
                        <div class="btn-wrapper">
                            <%= f.submit "Signup", class:"login-submit-btn" %>
                        </div>
                        <div class="signup-link-details">
                            <span>Have an account ?</span>
                            <%= link_to 'Login', new_user_session_path, class:"signup-link"  %>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>